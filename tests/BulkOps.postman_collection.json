{
	"info": {
		"_postman_id": "bulk-ops-test-suite",
		"name": "RealWorld Bulk Operations",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Export - Sync (Stream)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Content-Type is NDJSON\", function () {",
							"    pm.response.to.have.header(\"Content-Type\", \"application/x-ndjson\");",
							"});",
							"pm.test(\"Response body contains users\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"username\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{APIURL}}/v1/exports?resource=users&format=ndjson",
					"host": [
						"{{APIURL}}"
					],
					"path": [
						"v1",
						"exports"
					],
					"query": [
						{
							"key": "resource",
							"value": "users"
						},
						{
							"key": "format",
							"value": "ndjson"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Export - Async Job",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 202 Accepted\", function () {",
							"    pm.response.to.have.status(202);",
							"});",
							"var jsonData = pm.response.json();",
							"pm.test(\"Job ID is present\", function () {",
							"    pm.expect(jsonData.job_id).to.not.be.undefined;",
							"});",
							"// Save Job ID for the next request",
							"pm.globals.set(\"export_job_id\", jsonData.job_id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"resource\": \"articles\",\n    \"format\": \"csv\"\n}"
				},
				"url": {
					"raw": "{{APIURL}}/v1/exports",
					"host": [
						"{{APIURL}}"
					],
					"path": [
						"v1",
						"exports"
					]
				}
			},
			"response": []
		},
		{
			"name": "Check Job Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"var jsonData = pm.response.json();",
							"pm.test(\"Job ID matches\", function () {",
							"    pm.expect(jsonData.job_id).to.eql(pm.globals.get(\"export_job_id\"));",
							"});",
							"pm.test(\"Status is valid\", function () {",
							"    pm.expect(['PENDING', 'PROCESSING', 'COMPLETED', 'FAILED']).to.include(jsonData.status);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{APIURL}}/v1/jobs/{{export_job_id}}",
					"host": [
						"{{APIURL}}"
					],
					"path": [
						"v1",
						"jobs",
						"{{export_job_id}}"
					]
				}
			},
			"response": []
		}
	]
}